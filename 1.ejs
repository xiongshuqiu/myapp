<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Update Bed Assignment</title>
</head>
<body>
  <h1>Update Bed Assignment</h1>
  <form action="/beds/assignment/<%= bedAssignment._id %>/update" method="post">
    <div class="form-group">
      <label for="availableBedId">Available Bed Id <span style="color: red">*</span></label>
      <select class="form-control" id="availableBedId" name="availableBedId" required>
        <% if (availableBedIds && availableBedIds.length > 0) { %>
          <% availableBedIds.forEach(function(availableBedId) { %>
            <option value="<%= availableBedId.bedId %>" <%= bedAssignment.bedId === availableBedId.bedId ? 'selected' : '' %>>
              <%= availableBedId.bedId %>
            </option>
          <% }); %>
        <% } else { %>
          <option value="">No available availableBedId</option>
        <% } %>
      </select>
    </div>

    <div class="form-group">
      <label for="unassignedElderlyId">Unassigned Elderly ID <span style="color: red">*</span></label>
      <select class="form-control" id="unassignedElderlyId" name="unassignedElderlyId" required>
        <% if (elderlyIds && elderlyIds.length > 0) { %>
          <% elderlyIds.forEach(function(elderlyId) { %>
            <option value="<%= elderlyId.id %>" <%= bedAssignment.elderlyId === elderlyId.id ? 'selected' : '' %>>
              <%= elderlyId.name %> (ID: <%= elderlyId.id %>)
            </option>
          <% }); %>
        <% } else { %>
          <option value="">No existing elderlyId</option>
        <% } %>
      </select>
    </div>

    <div class="form-group">
      <label for="assignmentId">Assignment ID <span style="color: red">*</span></label>
      <input type="text" class="form-control" id="assignmentId" name="assignmentId" placeholder="Enter Assignment ID (e.g., A001)" value="<%= bedAssignment.assignmentId %>" required />
    </div>

    <div class="form-group">
      <label for="assignedDate">Assigned Date <span style="color: red">*</span></label>
      <input type="date" class="form-control" id="assignedDate" name="assignedDate" value="<%= bedAssignment.assignedDate ? new Date(bedAssignment.assignedDate).toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>" required />
    </div>

    <button type="submit">Update</button>
  </form>
</body>
</html>
