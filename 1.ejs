const seedDatabase = async () => {
  try {
    // 清空集合
    await Employee.deleteMany({});
    await BedAssignment.deleteMany({});

    // 插入 Employee 数据
    const employees = [
      {
        employeeId: 'E001',
        employeeName: 'Dr. John Doe',
        position: 'Doctor',
        contactNumber: '1234567890',
      },
      {
        employeeId: 'E002',
        employeeName: 'Dr. Jane Smith',
        position: 'Doctor',
        contactNumber: '0987654321',
      },
    ];
    await Employee.insertMany(employees);

    // 插入 Bed Assignment 数据
    const bedAssignments = [
      {
        assignmentId: 'A001',
        bedId: '3-701-b01',
        elderly: 'E001',
        assignedDate: new Date('2023-03-01'),
      },
      {
        assignmentId: 'A002',
        bedId: '3-701-b02',
        elderly: 'E002',
        assignedDate: new Date('2023-03-01'),
      },
    ];
    await BedAssignment.insertMany(bedAssignments);

    console.log('Database seeded successfully');
  } catch (err) {
    console.error('Error seeding database:', err.message);
  }
};

seedDatabase();
