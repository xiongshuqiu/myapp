<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Bed Status</title>
  <!-- 这里引入你的样式和其他依赖 -->
</head>
<body>
  <h1>Edit Bed Status</h1>
  <form action="/api/beds/status/:id" method="POST" id="edit-bed-status-form">
    <div class="form-group">
      <label for="bedId">Bed ID <span style="color: red">*</span></label>
      <input
        type="text"
        class="form-control"
        id="bedId"
        name="bedId"
        value="<%= bedStatus.bedId %>"
        placeholder="Enter Bed ID (e.g., 3-7-701s-01)"
        required
        pattern="^\d-\d-\d{3}[a-zA-Z]?-?\d{2}$"
        title="Bed ID format should be Building Number-Floor-Room Number-Bed Number (e.g., 3-7-701s-01)"
      />
      <small class="form-text text-muted">
        Format: Building Number-Floor-Room Number-Bed Number (e.g., 3-7-701s-01)
      </small>
    </div>

    <div class="form-group">
      <label for="status">Status <span style="color: red">*</span></label>
      <select class="form-control" id="status" name="status" required>
        <option value="occupied" <%= bedStatus.status === 'occupied' ? 'selected' : '' %>>occupied</option>
        <option value="available" <%= bedStatus.status === 'available' ? 'selected' : '' %>>available</option>
        <option value="reserved" <%= bedStatus.status === 'reserved' ? 'selected' : '' %>>reserved</option>
        <option value="maintenance" <%= bedStatus.status === 'maintenance' ? 'selected' : '' %>>maintenance</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // 获取当前床位状态数据并填充表单
      const bedStatusId = getBedStatusIdFromURL(); // 需要实现这个函数来从URL中获取ID
      fetch(`/api/beds/status/${bedStatusId}`)
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            document.getElementById('bedId').value = data.data.bedId;
            document.getElementById('status').value = data.data.status;
          } else {
            console.error('Failed to retrieve bed status:', data.message);
          }
        })
        .catch(error => console.error('Error fetching bed status:', error));

      // 提交表单
      document.getElementById('edit-bed-status-form').addEventListener('submit', function(event) {
        event.preventDefault();

        const formData = new FormData(this);
        const bedStatusId = getBedStatusIdFromURL(); // 需要实现这个函数来从URL中获取ID

        fetch(`/api/beds/status/${bedStatusId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(Object.fromEntries(formData)),
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert('Bed status updated successfully');
          } else {
            console.error('Failed to update bed status:', data.message);
          }
        })
        .catch(error => console.error('Error updating bed status:', error));
      });
    });

    function getBedStatusIdFromURL() {
      const url = new URL(window.location.href);
      return url.pathname.split('/').pop();
    }
  </script>
</body>
</html>
