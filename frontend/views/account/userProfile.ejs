<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chinaz</title>
    <!-- 1.框架样式：Bootstrap Styles-->
    <link href="/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- 2.图标样式：FontAwesome Styles-->
    <link href="/assets/css/font-awesome.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!--3.普通样式：Custom Styles-->
    <link href="/assets/css/custom-styles.css" rel="stylesheet" />
    <!-- 4.字体样式：Google Fonts-->
    <link
      href="http://fonts.useso.com/css?family=Open+Sans"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <div id="wrapper">
      <!-- 顶部导航条 -->
      <%- include('../block/top-navbar.ejs') %>
      <!-- 左侧导航条 -->
      <%- include('../block/navbar-side.ejs') %>

      <div id="page-wrapper">
        <div class="header">
          <h1 class="page-header">
            User Information Page <small>View and update your details.</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">User Info</li>
          </ol>
        </div>

        <div id="page-inner">
          <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
                <div class="panel-heading">User Information</div>
                <div class="panel-body">
                  <div class="row">
                    <div class="col-lg-6">
                      <form
                        action="acounts/<%=_id%>/password"
                        method="post"
                        role="form"
                      >
                        <ul>
                          <li>
                            <div class="form-group">
                              <span><label for="userId">User ID:</label></span>
                              <span id="userId" class="form-control-static">
                                <%= user.userId %></span
                              >
                            </div>
                          </li>
                          <li>
                            <div class="form-group">
                              <span><label for="account">Account:</label></span>
                              <span id="account" class="form-control-static">
                                <%= user.account %></span
                              >  
                            </div>
                          </li>
                          <li>
                            <div class="form-group">
                              <span
                                ><label for="userName">User Name:</label></span
                              >
                              <span id="userName" class="form-control-static">
                                <%= user.userName %></span
                              >
                            </div>
                          </li>
                          <li>
                            <div class="form-group">
                              <span
                                ><label for="phoneNumber"
                                  >Phone Number:</label
                                ></span
                              >
                              <span
                                id="phoneNumber"
                                class="form-control-static"
                              >
                              <%= user.phoneNumber %></span
                              >
                            </div>
                          </li>
                          <li>
                            <div class="form-group">
                              <span><label for="email">Email:</label></span>
                              <span id="email" class="form-control-static">
                                <%= user.email %></span
                              >
                            </div>
                          </li>
                          <li>
                            <div class="form-group">
                              <span><label for="role">Role:</label></span>
                              <span id="role" class="form-control-static">
                                <%= user.role %></span
                              >
                            </div>
                          </li>
                        </ul>

                        <input
                          type="hidden"
                          name="password"
                          value="newPassword"
                        />
                        <!-- Hidden password field -->

                        <!-- Update Password 按钮 -->
                        <button
                          type="button"
                          class="btn btn-primary"
                          data-toggle="modal"
                          data-target="#updatePasswordModal"
                          data-user-id="<%= _id %>"
                        >
                          Update Password
                        </button>

                        <button
                          type="reset"
                          class="btn btn-secondary"
                          onclick="window.location.href='/dashboard';"
                        >
                          Return
                        </button>
                      </form>

                      <div id="message" class="mt-3">
                        <!-- Message logic remains the same -->
                        <!-- <% if (typeof message !== 'undefined' && message !== null) { %>
                        <div class="alert alert-success"><%= message %></div>
                        <% } %> -->
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
          </div>
        </div>

        <!-- /. PAGE INNER  -->
      </div>

      <!-- /. PAGE WRAPPER  -->
    </div>
    <!--  Modals-->

    <!-- 模态框 -->
    <div
      class="modal fade"
      id="updatePasswordModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="updatePasswordModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-hidden="true"
            >
              &times;
            </button>
            <h4 class="modal-title" id="updatePasswordModalLabel">
              Update Password
            </h4>
          </div>
          <div class="modal-body">
            <form id="updatePasswordForm">
              <div class="form-group">
                <label for="newPassword">New Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="newPassword"
                  required
                />
              </div>
              <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  required
                />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
              Close
            </button>
            <button
              type="button"
              class="btn btn-primary"
              id="savePasswordButton"
            >
              Save changes
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- End Modals-->
   

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const savePasswordButton =
          document.getElementById('savePasswordButton');
        const updatePasswordModal = document.getElementById(
          'updatePasswordModal',
        );

        savePasswordButton.addEventListener('click', async function () {
          const userId = updatePasswordModal.getAttribute('data-user-id'); // 获取用户ID
          const newPassword = document.getElementById('newPassword').value;
          const confirmPassword =
            document.getElementById('confirmPassword').value;

          if (newPassword !== confirmPassword) {
            alert('Passwords do not match!');
            return;
          }

          const data = { password: newPassword };

          try {
            await fetch(`/accounts/${userId}/password`, {
              // 传递用户ID
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(data),
            });
          } catch (err) {
            console.error('Error updating password:', err);
            // 错误反馈由前端控制器处理
          }
        });
      });
    </script>

    <!-- /. WRAPPER  -->
    <!-- JS Scripts-->
    <!-- jQuery Js -->
    <script src="/assets/js/jquery-1.10.2.js"></script>
    <!-- Bootstrap Js -->
    <script src="/assets/js/bootstrap.min.js"></script>
    <!-- Metis Menu Js -->s
    <script src="/assets/js/jquery.metisMenu.js"></script>
    <!-- Custom Js -->
    <script src="/assets/js/custom-scripts.js"></script>
  </body>
</html>
