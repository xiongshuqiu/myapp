<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update BedAssignment Information</title>
    <!-- 1.框架样式：Bootstrap Styles-->
    <link href="/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- 2.图标样式：FontAwesome Styles-->
    <link href="/assets/css/font-awesome.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!--3.普通样式：Custom Styles-->
    <link href="/assets/css/custom-styles.css" rel="stylesheet" />
    <!-- 4.字体样式：Google Fonts-->
    <link
      href="http://fonts.useso.com/css?family=Open+Sans"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <div id="wrapper">
     <!-- 顶部导航条 -->
     <%- include('../../block/top-navbar.ejs') %>
     <!-- 左侧导航条 -->
     <%- include('../../block/navbar-side.ejs') %>

      <div id="page-wrapper">
        <div class="header">
          <h1 class="page-header">
            Update BedAssignment Information <small>Modify the BedAssignment's details.</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">Update BedAssignment</li>
          </ol>
        </div>

        <div id="page-inner">
          <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
                <div class="panel-heading">BedAssignment Information</div>
                <div class="panel-body">
                  <div class="row">
                    <div class="col-lg-6">
                      <form
                        action="/beds/assignment/<%= bedAssignment._id  %>?_method=PUT"
                        method="post"
                        role="form"
                      >
                      
                      <!-- 将在生成的HTML中插入value= availableBedId.bedId 的实际值。 -->
                      <!-- <div class="form-group">
                        <label for="availableBedId">Available Bed Id <span style="color: red">*</span></label>
                        <select class="form-control" id="availableBedId" name="availableBedId" required>
                          <% if (availableBedIds && availableBedIds.length > 0) { %>
                            <% availableBedIds.forEach(function (availableBedId) { %>
                              <option value="<%= availableBedId.bedId %>" <%= bedAssignment.bedId === availableBedId.bedId ? 'selected' : '' %>>
                                <%= availableBedId.bedId %>
                              </option>
                            <% }); %>
                          <% } else { %>
                            <option value="">No available beds</option>
                          <% } %>
                        </select>
                      </div> -->
                      <div class="form-group">
                        <label for="availableBedId">Available Bed Id <span style="color: red">*</span></label>
                        <select class="form-control" id="availableBedId" name="availableBedId" required>
                          <% if (availableBedIds && availableBedIds.length > 0) { %>
                            <!-- 显示当前分配的床位 -->
                            <option value="<%= bedAssignment.bedId %>" selected>
                              <%= bedAssignment.bedId %>
                            </option>
                            
                            <!-- 显示其他可用床位，但排除当前分配的床位 -->
                            <% availableBedIds.forEach(function (availableBedId) { %>
                              <% if (availableBedId.bedId !== bedAssignment.bedId) { %>
                                <option value="<%= availableBedId.bedId %>">
                                  <%= availableBedId.bedId %>
                                </option>
                              <% } %>
                            <% }); %>
                          <% } else { %>
                            <option value="">No available beds</option>
                          <% } %>
                        </select>
                      </div>
                      
                    
                        <div class="form-group">
                          <label for="unassignedElderlyId"> Elderly ID(Name) <span style="color: red">*</span></label>
                          <select class="form-control" id="unassignedElderlyId" name="elderlyId" required>
                            <% if (elderlyIds && elderlyIds.length > 0) { %>
                              <% elderlyIds.forEach(function(elderlyId) { %>
                                <option value="<%= elderlyId.id %>" <%= bedAssignment.elderlyId === elderlyId.id ? 'selected' : '' %>>
                                  <!-- <%= elderlyId.name %> (ID: <%= elderlyId.id %>) -->
                                     ID: <%= elderlyId.id %>(<%= elderlyId.name %>)
                                </option>
                              <% }); %>
                            <% } else { %>
                              <option value="">No existing elderlyId</option>
                            <% } %>
                          </select>
                        </div>
                    
                        <div class="form-group">
                          <label for="assignmentId">Assignment ID <span style="color: red">*</span></label>
                          <input
                            type="text"
                            class="form-control"
                            id="assignmentId"
                            name="assignmentId"
                            placeholder="Enter Assignment ID (e.g., A001)"
                            value="<%= bedAssignment.assignmentId %>"
                            required
                            pattern="A\d{3}"
                            title="The Assignment ID should follow the format: a capital letter followed by three digits (e.g., A001)."
                          />
                          <small class="form-text text-muted">
                            The Assignment ID should follow the format: a capital letter followed by three digits (e.g., A001).
                          </small>
                        </div>

        
                        
                        <div class="form-group">
                          <label for="assignedDate">Assigned Date <span style="color: red">*</span></label>
                          <div class="input-wrapper">
                            <input
                              type="date"
                              class="form-control date-input"
                              id="assignedDate"
                              name="assignedDate"
                              value="<%= bedAssignment.assignedDate ? new Date(bedAssignment.assignedDate).toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>"
                            />
                          </div>
                        </div>
                        
                        <div class="form-group">
                          <label for="releaseDate">Release Date </label>
                          <div class="input-wrapper">
                            <input
                              type="date"
                              class="form-control date-input"
                              id="releaseDate"
                              name="releaseDate"
                              value="<%= bedAssignment.releaseDate ? new Date(bedAssignment.releaseDate).toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>"
                            />
                          </div>
                        </div>
                        
                        
                        

                        <button type="submit" class="btn btn-primary">
                          Save Changes
                        </button>
                        <button
                          type="reset"
                          class="btn btn-secondary"
                          onclick="window.location.href='/beds/assignment/';"
                        >
                          Return
                        </button>
                      </form>
                      <div id="message">
                        <% if (typeof message !== 'undefined' && message !==
                        null) { %>
                        <div class="alert alert-success"><%= message %></div>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
          </div>
        </div>
        <!-- /. PAGE INNER  -->
      </div>
      <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- JS Scripts-->
    <!-- jQuery Js -->
    <script src="/assets/js/jquery-1.10.2.js"></script>
    <!-- Bootstrap Js -->
    <script src="/assets/js/bootstrap.min.js"></script>
    <!-- Metis Menu Js -->
    <script src="/assets/js/jquery.metisMenu.js"></script>
    <!-- Custom Js -->
    <script src="/assets/js/custom-scripts.js"></script>
  </body>
</html>
