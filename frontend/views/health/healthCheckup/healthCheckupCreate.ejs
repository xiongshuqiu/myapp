<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chinaz</title>
    <!-- 1.框架样式：Bootstrap Styles-->
    <link href="/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- 2.图标样式：FontAwesome Styles-->
    <link href="/assets/css/font-awesome.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!--3.普通样式：Custom Styles-->
    <link href="/assets/css/custom-styles.css" rel="stylesheet" />
    <!-- 4.字体样式：Google Fonts-->
    <link
      href="http://fonts.useso.com/css?family=Open+Sans"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <div id="wrapper">
      <!-- 顶部导航条 -->
      <%- include('../../block/top-navbar.ejs') %>
      <!-- 左侧导航条 -->
      <%- include('../../block/navbar-side.ejs') %>

      <div id="page-wrapper">
        <div class="header">
          <h1 class="page-header">
            Forms Page <small>Best form elements.</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">Data</li>
          </ol>
        </div>

        <div id="page-inner">
          <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
                <div class="panel-heading">Basic Form Elements</div>
                <div class="panel-body">
                  <div class="row">
                    <div class="col-lg-6">
                      <form
                        action="/health/checkup/create"
                        method="post"
                        role="form"
                      >
                        <div class="form-group">
                          <label for="elderlyId">
                            Uncheckuped Elderly Id(Name)
                            <span style="color: red">*</span></label
                          >
                          <select
                            class="form-control"
                            id="elderlyId"
                            name="elderlyId"
                            required
                          >
                            <% if (unCheckupedElderlyIds &&
                            unCheckupedElderlyIds.length > 0) { %> <%
                            unCheckupedElderlyIds.forEach(function(unCheckupedElderlyId)
                            { %>
                            <option
                              value="<%= unCheckupedElderlyId.elderlyId %>"
                            >
                              <!-- <%= unCheckupedElderlyId.elderlyId %> -->
                              ID:<%= unCheckupedElderlyId.elderlyId %> (<%=
                              unCheckupedElderlyId.elderlyName %>)
                            </option>
                            <% }) %> <% } else { %>
                            <option value="">No existing elderlyId</option>
                            <% } %>
                          </select>
                        </div>

                        <div class="form-group">
                          <label for="checkupName">
                            Checkup Name
                            <span style="color: red">*</span></label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="checkupName"
                            name="checkupName"
                            placeholder="Enter checkupName"
                            required
                          />
                        </div>

                        <div class="form-group">
                          <label for="description"> Description </label>
                          <input
                            type="text"
                            class="form-control"
                            id="description"
                            name="description"
                            placeholder="Enter description"
                            required
                          />
                        </div>

                        <div class="form-group">
                          <label for="checkupDate"
                            >Checkup Date
                          </label>
                          <div class="input-wrapper">
                            <input
                              type="date"
                              class="form-control date-input"
                              id="checkupDate"
                              name="checkupDate"
                              value="<%= new Date().toISOString().split('T')[0] %>"
                              required
                            />
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="createdAt"
                            >Created Time
                          </label>
                          <div class="input-wrapper">
                            <input
                              type="date"
                              class="form-control date-input"
                              id="createdAt"
                              name="createdAt"
                              value="<%= new Date().toISOString().split('T')[0] %>"
                              required
                            />
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="employeeId">
                            Employee Id(Name)
                            <span style="color: red">*</span></label
                          >
                          <select
                            class="form-control"
                            id="employeeId"
                            name="employeeId"
                            required
                          >
                            <% if (employeeIds &&
                            employeeIds.length > 0) { %> <%
                            employeeIds.forEach(function(employee)
                            { %>
                            <option
                              value="<%= employee.employeeId %>"
                            >
                              <!-- <%= employee.employeeId %> -->
                              ID:<%= employee.employeeId %> (<%=
                              employee.employeeName %>)
                            </option>
                            <% }) %> <% } else { %>
                            <option value="">No existing employeeId</option>
                            <% } %>
                          </select>
                        </div>

                        <div class="form-group">
                          <label for="careLevelId">
                            CareLevel ID(Level)
                            <span style="color: red">*</span></label
                          >
                          <select
                            class="form-control"
                            id="careLevelId"
                            name="careLevelId"
                            required
                          >
                            <% if (careLevelIds &&
                            careLevelIds.length > 0) { %> <%
                            careLevelIds.forEach(function(careLevel)
                            { %>
                            <option
                              value="<%= careLevel.careLevelId %>"
                            >
                              <!-- <%= careLevel.careLevelId %> -->
                              ID:<%= careLevel.careLevelId %> (<%=
                              careLevel.level %>)
                            </option>
                            <% }) %> <% } else { %>
                            <option value="">No existing careLevelId</option>
                            <% } %>
                          </select>
                        </div>

                        <button type="submit" class="btn btn-primary">
                          Submit
                        </button>

                        <div id="message" class="mt-3">
                          <% if (typeof message !== 'undefined' && message !==
                          null) { %>
                          <div class="alert alert-success"><%= message %></div>
                          <% } %>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
                <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
          </div>
        </div>

        <!-- /. PAGE INNER  -->
      </div>
      <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- JS Scripts-->
    <!-- jQuery Js -->
    <script src="/assets/js/jquery-1.10.2.js"></script>
    <!-- Bootstrap Js -->
    <script src="/assets/js/bootstrap.min.js"></script>
    <!-- Metis Menu Js -->
    <script src="/assets/js/jquery.metisMenu.js"></script>
    <!-- Custom Js -->
    <script src="/assets/js/custom-scripts.js"></script>
    <!-- Morris Js -->
    <script src="/assets/js/morris.js"></script>
  </body>
</html>
