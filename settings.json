{
  "git.ignoreMissingGitWarning": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.path": "",
  "git.ignoreRebaseWarning": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "eslint.format.enable": true,
  "eslint.rules.customizations": [],
  "eslint.lintTask.enable": true,
  "editor.formatOnType": true,
  "explorer.compactFolders": false,
  "editor.fontSize": 20,
  "git.enableSmartCommit": true,
  "editor.stickyScroll.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.wordWrap": "on", // 启用自动换行
  "editor.wordWrapColumn": 80, // 设置代码总长度为80个字符
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  "redhat.telemetry.enabled": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ejs]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // 确保EJS文件使用Prettier
  },
  "files.associations": {
    "*.ejs": "html" // 将EJS文件与HTML模式关联
  },
  "prettier.printWidth": 80, // 设置Prettier的printWidth为80
  "workbench.colorTheme": "Default Dark+",
  "workbench.preferredDarkColorTheme": "Abyss",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 100,
  "diffEditor.ignoreTrimWhitespace": true,
  "workbench.editor.showTabs": "single",
  "workbench.editor.enablePreview": false,
  "workbench.editor.wrapTabs": true,
  "editor.rename.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false
}
