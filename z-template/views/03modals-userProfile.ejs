<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chinaz</title>
    <!-- 1.框架样式：Bootstrap Styles-->
    <link href="/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- 2.图标样式：FontAwesome Styles-->
    <link href="/assets/css/font-awesome.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!--3.普通样式：Custom Styles-->
    <link href="/assets/css/custom-styles.css" rel="stylesheet" />
    <!-- 4.字体样式：Google Fonts-->
    <link
      href="http://fonts.useso.com/css?family=Open+Sans"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <div id="wrapper">
      <!-- 顶部导航条 -->
      <%- include('../block/top-navbar.ejs') %>
      <!-- 左侧导航条 -->
      <%- include('../block/navbar-side.ejs') %>

      <div id="page-wrapper">
        <div class="header">
          <h1 class="page-header">
            User Information Page <small>View and update your details.</small>
          </h1>
          <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">User Info</li>
          </ol>
        </div>

        <div id="page-inner">
          <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
                <div class="panel-heading">User Information</div>
                <div class="panel-body">
                  <div class="row">
                    <div class="col-lg-6">
                      <form
                        action="acounts/<%=_id%>/password"
                        method="post"
                        role="form"
                      >
                        <ul>
                          <li>
                            <div class="form-group">
                              <span><label for="userId">User ID:</label></span>
                              <span id="userId" class="form-control-static">
                                <%= user.userId %></span
                              >
                            </div>
                          </li>
                          <li>
                            <div class="form-group">
                              <span><label for="account">Account:</label></span>
                              <span id="account" class="form-control-static">
                                <%= user.account %></span
                              >
                            </div>
                          </li>
                          <li>
                            <div class="form-group">
                              <span
                                ><label for="userName">User Name:</label></span
                              >
                              <span id="userName" class="form-control-static">
                                <%= user.userName %></span
                              >
                            </div>
                          </li>
                          <li>
                            <div class="form-group">
                              <span
                                ><label for="phoneNumber"
                                  >Phone Number:</label
                                ></span
                              >
                              <span
                                id="phoneNumber"
                                class="form-control-static"
                              >
                                <%= user.phoneNumber %></span
                              >
                            </div>
                          </li>
                          <li>
                            <div class="form-group">
                              <span><label for="email">Email:</label></span>
                              <span id="email" class="form-control-static">
                                <%= user.email %></span
                              >
                            </div>
                          </li>
                          <li>
                            <!-- form-control-static 是一个 CSS 类，通常用于将表单控件的样式应用到静态文本上。 -->
                            <div class="form-group">
                              <span><label for="role">Role:</label></span>
                              <span id="role" class="form-control-static">
                                <%= user.role %></span
                              >
                            </div>
                          </li>
                        </ul>

                        <!-- Update Password 按钮 -->
                        <!-- type="button" 普通按钮 -->
                        <!-- <form action="/submit-form" method="post">
                          <button type="submit" class="btn btn-primary">Submit</button>
                        </form> -->
                        
                        <button
                          type="button"  
                          class="btn btn-primary"
                          data-toggle="modal"
                          data-target="#updatePasswordModal"
                          data-user-id="<%= _id %>"
                        >
                          Update Password
                        </button>

                        <button
                          type="reset"
                          class="btn btn-secondary"
                          onclick="window.location.href='/dashboard';"
                        >
                          Return
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
                <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
          </div>
        </div>

        <!-- /. PAGE INNER  -->
      </div>

      <!-- /. PAGE WRAPPER  -->
    </div>
    <!--  Modals-->

    <!-- 模态框 -->
    <div
      class="modal fade"
      id="updatePasswordModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="updatePasswordModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-hidden="true"
            >
              &times;
            </button>
            <h4 class="modal-title" id="updatePasswordModalLabel">
              Update Password
            </h4>
          </div>
          <div class="modal-body">
            <form id="updatePasswordForm">
              <div class="form-group">
                <label for="newPassword">New Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="newPassword"
                  required
                />
              </div>
              <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  required
                />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
              Close
            </button>
            <button
              type="button"
              class="btn btn-primary"
              id="savePasswordButton"
            >
              Save changes
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- End Modals-->
    <script>
      // 等待DOM内容加载完成后执行
      document.addEventListener('DOMContentLoaded', function () {
        // 获取“保存密码”按钮元素
        const savePasswordButton = document.getElementById('savePasswordButton');
        // 获取更新密码的模态框元素
        const updatePasswordModal = document.getElementById('updatePasswordModal');
        // 1.当模态框显示时触发（从普通按钮中获取_id值）
        $('#updatePasswordModal').on('show.bs.modal', function (event) {
          // 获取触发事件的按钮
          const button = event.relatedTarget;
          // 从按钮的data属性中获取_id
          const _id = button.getAttribute('data-user-id');
          // 将_id设置到模态框的data属性中
          updatePasswordModal.setAttribute('data-user-id', _id);
        });
        // 2.当“保存密码”按钮被点击时触发（获取密码值）
        savePasswordButton.addEventListener('click', async function () {
          //（1） 获取模态框中设置的用户_id
          const _id = updatePasswordModal.getAttribute('data-user-id');
          // 检查_id是否为null或undefined
          if (!_id) {
            alert('User ID is missing!');
            return;
          }
          // （2）获取新密码的值
          const newPassword = document.getElementById('newPassword').value;
          // 获取确认密码的值
          const confirmPassword = document.getElementById('confirmPassword').value;
          // 检查新密码和确认密码是否匹配
          if (newPassword !== confirmPassword) {
            alert('Passwords do not match!');
            return;
          }
          //（3）创建包含新密码的数据对象发送给前端控制器
          const data = { password: newPassword };
          try {
            // 向服务器发送POST请求，更新密码
            const response = await fetch(`/accounts/${_id}/password`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(data),
            });
            if (response.ok) {
              console.log('Password updated successfully.');
              $('#updatePasswordModal').modal('hide');
            } else {
              console.error('Error updating password:', response.statusText);
            }
          } catch (err) {
            console.error('Error updating password:', err);
          }
        });
      });
    </script>
    

    <!-- /. WRAPPER  -->
    <!-- JS Scripts-->
    <!-- jQuery Js -->
    <script src="/assets/js/jquery-1.10.2.js"></script>
    <!-- Bootstrap Js -->
    <script src="/assets/js/bootstrap.min.js"></script>
    <!-- Metis Menu Js -->s
    <script src="/assets/js/jquery.metisMenu.js"></script>
    <!-- Custom Js -->
    <script src="/assets/js/custom-scripts.js"></script>
  </body>
</html>
